{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ScriptPulse Analysis Lens",
    "description": "Configuration for multi-modal analysis lenses (Reader, Narrator, Viewer) primarily affecting effort weighting.",
    "type": "object",
    "properties": {
        "lens_id": {
            "type": "string",
            "enum": [
                "viewer",
                "reader",
                "narrator",
                "custom"
            ],
            "description": "Unique identifier for the lens."
        },
        "description": {
            "type": "string",
            "description": "Human-readable description of what this lens emphasizes."
        },
        "effort_weights": {
            "type": "object",
            "required": [
                "cognitive_mix",
                "emotional_mix",
                "cognitive_components",
                "emotional_components"
            ],
            "properties": {
                "cognitive_mix": {
                    "type": "number",
                    "minimum": 0.0,
                    "maximum": 1.0,
                    "description": "Weight of Cognitive component in Total Effort (default 0.55)"
                },
                "emotional_mix": {
                    "type": "number",
                    "minimum": 0.0,
                    "maximum": 1.0,
                    "description": "Weight of Emotional component in Total Effort (default 0.45)"
                },
                "cognitive_components": {
                    "type": "object",
                    "required": [
                        "ref_score",
                        "ling_complexity",
                        "struct_score",
                        "dial_tracking"
                    ],
                    "properties": {
                        "ref_score": {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 1.0
                        },
                        "ling_complexity": {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 1.0
                        },
                        "struct_score": {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 1.0
                        },
                        "dial_tracking": {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 1.0
                        }
                    },
                    "description": "Sub-weights for cognitive load components. Should sum to 1.0."
                },
                "emotional_components": {
                    "type": "object",
                    "required": [
                        "dial_engagement",
                        "visual_score",
                        "ling_volume",
                        "stillness_factor"
                    ],
                    "properties": {
                        "dial_engagement": {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 1.0
                        },
                        "visual_score": {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 1.0
                        },
                        "ling_volume": {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 1.0
                        },
                        "stillness_factor": {
                            "type": "number",
                            "minimum": 0.0,
                            "maximum": 1.0
                        }
                    },
                    "description": "Sub-weights for emotional attention components. Should sum to 1.0."
                }
            }
        }
    },
    "required": [
        "lens_id",
        "description",
        "effort_weights"
    ]
}